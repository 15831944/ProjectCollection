<Window x:Class="BubbleFlow.TestResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Width="310" Height="170" 
        Title="警告">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="tb_info" Text="当前流程中存在无效结点,请调整后再重新提交!" Width="250" Height="20" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,20,10" Grid.Column="1" />
        
        <Button x:Name="OKButton" Content="确定" Click="OKButton_Click" Width="70" Height="20" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
    </Grid>
</Window>