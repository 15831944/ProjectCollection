             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopClient"
             mc:Ignorable="d" 
             Height="400" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Resources/总分页面.png" />
        </Grid.Background>
        <Grid>
            <StackPanel HorizontalAlignment="Left" Margin="116,180,0,0" Name="stackPanel1" VerticalAlignment="Top" Width="200">
