<UserControl x:Class="Dreambuild.Gis.Display.ScaleRuler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Canvas x:Name="LayoutRoot">
        <!--<TextBlock Canvas.Left="0" Canvas.Top="0" Text="0" />-->
        <TextBlock Canvas.Left="0" Canvas.Top="0" Name="txtLabel" Text="ScaleRuler" />
        <Line Name="LineBase" Stroke="DimGray" StrokeThickness="1" X1="0" X2="100" Y1="20" Y2="20" Height="96" Width="141" />
        <Line Name="LineRight" Stroke="DimGray" StrokeThickness="1" X1="100" X2="100" Y1="20" Y2="16" Height="96" Width="141" />
        <Line Name="LineLeft" Stroke="DimGray" StrokeThickness="1" X1="0" X2="0" Y1="20" Y2="16" Height="96" Width="141" />
    </Canvas>
</UserControl>
