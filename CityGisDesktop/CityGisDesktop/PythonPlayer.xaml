<Window x:Class="Dreambuild.Gis.Desktop.PythonPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IronPython Player" Height="100" Width="200" Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="DarkGray" />
                <GradientStop Color="DimGray" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="btnBrowse" Width="60" Height="40" Margin="5,0" Padding="5" BorderBrush="Transparent" Click="btnBrowse_Click">
                <Image Source="Resources/browse_button_content.png" />
            </Button>
            <Button x:Name="btnPlay" Width="60" Height="40" Margin="5.0" Padding="5" BorderBrush="Transparent" Click="btnPlay_Click">
                <Image Source="Resources/play_button_content.png" />
            </Button>
        </StackPanel>
    </Grid>
</Window>
