<UserControl x:Class="SystemBrushes.ListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Rectangle Name="colorPreview" Width="50" Margin="5" Fill="Red" Stroke="Black" StrokeThickness="1" />
            <TextBlock Name="colorName" Margin="5" Text="Red" Foreground="Black" VerticalAlignment="Center" />
            <TextBlock Name="textPreview" Margin="5" Text="like THIS" Foreground="Red" VerticalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
