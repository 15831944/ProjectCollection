<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
@using TongJi.Web.CMS
@{
    var roots = ChannelManager.GetAllRoots();

    ContentListControl list = new ContentListControl();
    var chn2 = new HtmlString(list.GetHtml(43, 10, true));
    var chn3 = new HtmlString(list.GetHtml(44, 10, true));
    var chn4 = new HtmlString(list.GetHtml(30, 10, true));
    var chn5 = new HtmlString(list.GetHtml(32, 10, true));
    var chn6 = new HtmlString(list.GetHtml(38, 10, true));
    var chn7 = new HtmlString(list.GetHtml(ChannelManager.GetContentListIncludingSubChannels(45).ToList(), 10, true));
    var chn8 = new HtmlString(list.GetHtml(78, 10, true));
    var chn9 = new HtmlString(list.GetHtml(ChannelManager.GetContentListIncludingSubChannels(6).ToList(), 10, true));
    var chn10 = new HtmlString(list.GetHtml(ChannelManager.GetContentListIncludingSubChannels(5).ToList(), 10, true));
    var chn11 = new HtmlString(list.GetHtml(ChannelManager.GetContentListIncludingSubChannels(4).ToList(), 10, true));
