<UserControl x:Class="Silverlight3dApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White">
        <!--3D drawing surface-->
        <DrawingSurface x:Name="myDrawingSurface" Draw="myDrawingSurface_Draw" MouseMove="myDrawingSurface_MouseMove" MouseLeftButtonDown="myDrawingSurface_MouseLeftButtonDown" MouseLeftButtonUp="myDrawingSurface_MouseLeftButtonUp" MouseWheel="myDrawingSurface_MouseWheel" />
        <TextBlock Text="CityGIS Web" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,30" Foreground="White" FontSize="40"/>
        <TextBox Name="outputArea" Text="" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10" Foreground="White" Background="Transparent" BorderBrush="Transparent" Width="200" Height="200" IsReadOnly="True" FontSize="10"/>
    </Grid>
</UserControl>
