<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>规划局政务公开平台</title>
    <script type="text/javascript" src="@Href("~/Scripts/jquery-1.4.1.js")"></script>
    <link href="@Href("~/Styles/Site.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        table .layout_table
        {
            width: 100%;
            border: 0px solid #FFFFFF;
        }
        .layout_table th, .layout_table td
        {
            border: 0px;
            vertical-align: top;
        }
        table .channel_table
        {
            width: 100%;
            border: 1px solid #CFDBE6;
        }
        .channel_table th
        {
            text-align: left;
            background-color: #DDDDDD;
        }
        .channel_table td
        {
            height: 200px;
            vertical-align: top;
        }
    </style>
</head>
<body>
    <div class="page">
        <div class="header">
            <div class="title">
                <h1>
                    规划局政务公开平台
                </h1>
            </div>
            <div class="clear hideSkiplink">
                <div class="menu" id="NavigationMenu">
                    <ul class="level1" style="height: 30px">
                        @foreach (var root in roots)
                        {
                            <li style="float: left"><a class="level1" href="Channel?id=@root.id" style="padding: 10px,20px">@root.name</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        <div class="main">
            <script type="text/javascript">
                var images = new Array();
                images.push('@Href("~/images/img_rotator_01.jpg")');
                images.push('@Href("~/images/img_rotator_02.jpg")');
                images.push('@Href("~/images/img_rotator_03.jpg")');

                var hrefs = new Array();
                hrefs.push('@Href("~/images/img_rotator_01.jpg")');
                hrefs.push('@Href("~/images/img_rotator_02.jpg")');
                hrefs.push('@Href("~/images/img_rotator_03.jpg")');

                var image_count = 3;
                var i = 0;
                var goNext = function () {
                    i = i < image_count ? i : 0;
                    $('#img_rotator').attr('src', images[i]);
                    $('#img_rotator_anchor').attr('href', hrefs[i]);
                    i++;
                };

                $(document).ready(function () {
                    goNext();
                    setInterval(goNext, 5000);
                });
            </script>
            <table class="layout_table" style="border: 0px">
                <colgroup>
                    <col style="width: 300px; min-width: 300px;" />
                    <col style="width: 300px; min-width: 300px;" />
                    <col style="width: 300px; min-width: 300px;" />
                </colgroup>
                <tr>
                    <td>
                        <table class="channel_table">
                            <tr>
                                <th>
                                    &nbsp; 图片新闻
                                </th>
                            </tr>
                            <tr>
                                <td id="chn1">
                                    <a id="img_rotator_anchor" href="images/img_rotator_01.jpg">
                                        <img id="img_rotator" width="300" height="200" alt="图片新闻" src="images/img_rotator_01.jpg"
                                            style="border: 0px" /></a>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table class="channel_table">
                            <tr>
                                <th>
                                    &nbsp; 本局新闻
                                </th>
                            </tr>
                            <tr>
                                <td id="chn2">
                                    @chn2
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table class="channel_table">
                            <tr>
                                <th>
                                    &nbsp; 行业动态
                                </th>
                            </tr>
                            <tr>
                                <td id="chn3">
                                    @chn3
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table class="channel_table">
                            <tr>
                                <th>
                                    &nbsp; 发证信息
                                </th>
                            </tr>
                            <tr>
                                <td id="chn4">
                                    @chn4
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table class="channel_table">
                            <tr>
                                <th>
                                    &nbsp; 采购公告
                                </th>
                            </tr>
                            <tr>
                                <td id="chn5">
                                    @chn5
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table class="channel_table">
                            <tr>
                                <th>
                                    &nbsp; 人事任免
                                </th>
                            </tr>
                            <tr>
                                <td id="chn6">
                                    @chn6
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        <img src="@Href("~/images/banner_to_gis.gif")" alt="电子地图" style="width: 920px" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <table class="channel_table">
                            <tr>
                                <th>
                                    &nbsp; 规划公示
                                </th>
                            </tr>
                            <tr>
                                <td id="chn7">
                                    @chn7
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table class="channel_table">
                            <tr>
                                <th>
                                    &nbsp; 规划知识
                                </th>
                            </tr>
